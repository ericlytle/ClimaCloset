<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="umkc.elmp7.climacloset">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/climacloset"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ClimaClothesActivites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClimaClothesActivites.CatalogTopActivity"
            android:label="@string/title_activity_catalog_top"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClimaClothesActivites.CatalogBottomActivity"
            android:label="@string/title_activity_catalog_bottom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClimaClothesActivites.BrowseBottomsActivity"
            android:label="@string/title_activity_browse_bottom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClimaClothesActivites.BrowseTopsActivity"
            android:label="@string/title_activity_browse_top"
            android:theme="@style/AppTheme.NoActionBar" />

        <uses-feature android:name="android.hardware.camera" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
